<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>From user</th>
      <th>To user</th>
      <th>Help session</th>
      <th>Amount</th>
      <th>Tip</th>
      <th>Completed</th>
      <th>Proof</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.from_user_id %></td>
        <td><%= payment.to_user_id %></td>
        <td><%= payment.help_session_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.tip %></td>
        <td><%= payment.completed %></td>
        <td><%= payment.proof %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

