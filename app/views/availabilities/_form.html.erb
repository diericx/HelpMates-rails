    <%= form.label :repeat_weekly %>
    <%= form.check_box :repeat_weekly, id: :availability_repeat_weekly %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, id: :availability_user_id %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.number_field :course_id, id: :availability_course_id %>
