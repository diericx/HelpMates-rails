            <li><span>19:00</span></li>
            <li><span>19:30</span></li>
            <li><span>20:00</span></li>
        </ul>
    </div> <!-- .timeline -->

    <div class="events">
        <ul>

            <% week_days.each_with_index do |day, i| %>
                <li class="events-group">
                    <div class="top-info"><span><%= day %></span></div>
    
                    <ul>
                        <% @availabilities.each do |avlblty| %>
                            <% if avlblty.day == i %>
                                <% puts avlblty.start_time.to_s(:time) %>
                                <% puts "********" %>
                                <li class="single-event" data-start=<%= avlblty.start_time.to_s(:time) %> data-end=<%= avlblty.end_time.to_s(:time) %> data-content="event-restorative-yoga" data-event="event-4">
                                    <a href="#0">
                                        <p class="event-name"></p>
                                    </a>
                                </li>
                            <% end %>
                        <% end %>

                    </ul>
                </li>
            <% end %>
        </ul>
    </div>

    <div class="event-modal">
        <header class="header">
            <div class="content">
                <span class="event-date"></span>
                <h3 class="event-name"></h3>
            </div>

            <div class="header-bg"></div>
        </header>

        <div class="body">
            <div class="event-info"></div>
            <div class="body-bg"></div>
        </div>

        <a href="#0" class="close">Close</a>
    </div>

    <div class="cover-layer"></div>
</div> <!-- .cd-schedule -->
